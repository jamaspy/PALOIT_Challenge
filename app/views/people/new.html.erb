<h1>Create New Person</h1>

<%= form_for @person do |f| %>
                <%= f.label :firstname%>
                <%= f.text_field :firstname%>

                <%= f.label :lastname%>
                <%= f.text_field :lastname%>
                
                <%= f.submit "Get Binary"%>
<% end %>

<table>
<tr>
    <th>Firstname</th>
    <th>Lastname</th> 
    <th>Ascii</th>
    <th>Binary</th>
    <th>Zeros</th>
  </tr>
<% @people.each do |person|%>
<tr>
    <td><%=person.firstname%></td> 
    <td><%=person.lastname%></td>
    <td><%=person.ascii%></td>
    <td><%=person.binary%></td>
    <td><%=person.zeros%></td>
</tr>
<% end %>
</ul>